    "version": "0.1.0",
    "configurations": [
        {
            "name": "Chrome:Javascript",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}/mail"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver"
            ],
            "django": true
        }
    ]
}